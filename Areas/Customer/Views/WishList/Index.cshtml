@model List<WishListItems>

<h2>Your Wish List</h2>

@if (Model.Count == 0)
{
    <p>Your wish list is empty.</p>
}
else
{
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card">
                        <img class="card-img-top" src="~/Images/@item.Product.Image" alt="@item.Product.ProductName" />
                        <div class="card-body">
                            <h5 class="card-title">@item.Product.ProductName</h5>
                            <p class="card-text">@item.Product.ProductDescription</p>
                            <p class="card-text text-success">@item.Product.ListPrice $</p>
                            <a href="@Url.Action("Details", "Product", new { id = item.ProductId })" class="btn btn-primary">View Product</a>
                            <a href="@Url.Action("RemoveFromWishList", new { wishListItemId = item.Id })" class="btn btn-danger">Remove</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
