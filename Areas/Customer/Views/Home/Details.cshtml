@model Demo.ViewModels.ProductDetails
@{

    int? id = Context.Session.GetInt32("UserID");

}
<div style=" border-radius:2mm; background-color:#eee;" class="container pe-5 ps-6  mt-3  d-flex  justify-content-between  align-items-center">
    <a href="/home" style="border:none;" class="btn btn-outline-secondary  ps-4 pe-4"> <i style="font-size:30px;" class="fa-solid fa-arrow-left"></i> </a>

</div>

<div class="container d-flex align-items-lg-start flex-wrap ">
    <div class="card m-3 " style="width: 17.8rem;">
        <a href=""> <img class="card-img-top" src="~/Images/@Model.Product.Image" style="height:15rem;" /></a>
    </div>
    <div class="card-body">
        <h5 class="card-title">@Model.Product.ProductName</h5>
        <h6 style="font-size:small;" class="card-text">@Model.Product.ProductDescription</h6>
        <p class="card-text">
            @for (int i = 0; i < Model.Product.Rate; i++)
            {

                <a href="#">  <i class="fa-regular fa-star "></i> </a>

            }
            <span class="ms-3">@Model.Product.ListPrice $</span>

        </p>
        <p class="card-text">Brand :  @Model.Product.Brand.BrandName </p>
        <p class="card-text">Quantity :  @Model.Quantity </p>
        
        <a href="/Order/CraeteOrder/@Model.Product.ProductId" class="btn btn-primary">Buy Now</a>
        <a onclick="AddToCart(@Model.Product.ProductId,@id)" class="btn btn-primary">Cart <i class="fa-solid fa-plus"></i></a>
    </div>
</div>


<!-- Modal To Add to cart -->
<div class="modal fade" id="addtocart" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="catform" method="post" action="/Order/AddToCart">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Quantity</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group mb-3">
                        <input type="hidden" id="pId" name="id" />
                        <label class="form-label">Quantity of Product</label>
                        <input type="number" class="form-control" name="q" />

                    </div>
                    <span class="spn text-danger"></span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>