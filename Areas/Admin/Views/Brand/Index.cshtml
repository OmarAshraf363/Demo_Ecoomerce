@model Demo.ViewModels.BrandViewModels
@{
    int index = 0;
    Layout = "_AdminLayout";
}
<div style="padding-right:8rem; border-radius:2mm; background-color:#eee;" class="container  mt-3  d-flex  justify-content-between  align-items-center">
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Create New Brand
    </button>
    <h2>Categories</h2>
    <span> Contains : @Model.Brands.Count</span>
</div>
<div class="container">
    <table class="table table-dark table-hover ">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Products</th>
                <th scope="col">Handel</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Brands)
            {


                <tr>
                    <th scope="row">@(index += 1)</th>
                    <td>@item.BrandName (@item.Products.Count)</td>
                    <td class="ps-3"><a class="btn btn-outline-primary" href="/product/mobcat/@item.BrandId">Get</a> </td>
                    <td>
                        <button class="btn btn-outline-warning" onclick='EditBrand(@Html.Raw(Json.Serialize(new {id=item.BrandId,name=item.BrandName})))'>Edit</button>

                        <a class=" btn btn-outline-danger" onclick="showAlert(@item.BrandId,'Brand','Admin')" >Delete</a>


                    </td>


                </tr>

            }
        </tbody>
    </table>
</div>

<!-- Modal To Add Anew Caategory -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="brandform" method="post"  action="/Admin/Brand/Create">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Create New Brand</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group mb-3">
                        <label class="form-label" asp-for="BrandName">Brand Name</label>
                        <input class="form-control" asp-for="BrandName" />

                    </div>
                    <span class="spn text-danger"></span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" onclick="allConfirm('brandform')" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- End Modal To Add Anew Caategory -->
<!--modal to Edit-->
<div class="modal fade " id="editModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="EditForm" method="post" action="/Brand/Edit">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Edit This Category</h5>
                    <button type="button" onclick="test('editModal')" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group mb-3">
                        <label class="form-label" >Brand Name</label>
                        <input class="form-control" id="brandname" asp-for="BrandName"  />
                        <input class="form-control" type="hidden" id="brandid" asp-for="BrandId"/>

                    </div>
                    <span class="spn text-danger"></span>
                </div>
                <div class="modal-footer">
                    <button type="button" onclick="test('editModal')" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" onclick="allConfirm('EditForm')" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!--End Modal Edit-->