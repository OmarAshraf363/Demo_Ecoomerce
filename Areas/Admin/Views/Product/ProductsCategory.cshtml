@model Demo.ViewModels.AddProductFromCategoryViewModel


@if (Model.Products.Count() != 0)
{
    <div style=" border-radius:2mm; background-color:#eee;" class="container pe-5 ps-6  mt-3  d-flex  justify-content-between  align-items-center">
        <a href="/home" style="border:none;" class="btn btn-outline-secondary  ps-4 pe-4"> <i style="font-size:30px;" class="fa-solid fa-arrow-left"></i> </a>
        <h2>@Model.CategoryName</h2>
        <span> Contains : @Model.Products.Count()</span>
       
    </div>




    <div class="container d-flex align-items-lg-start flex-wrap ">
        @foreach (var product in Model.Products)
        {

            <div class="card m-3 " style="width: 17.8rem;">
                <a href=""> <img class="card-img-top" src="~/Images/@product.Image" style="height:15rem;" /></a>
                <div class="card-body">
                    <h5 class="card-title">@product.ProductName</h5>
                    <h6 style="font-size:small;" class="card-text">@product.ProductDescription</h6>
                    <p class="card-text">
                        @for (int i = 0; i < product.Rate; i++)
                        {

                            <a href="#">  <i class="fa-regular fa-star "></i> </a>

                        }
                        <span class="ms-3">@product.ListPrice $</span>

                    </p>
                    <a href="/Product/GetById/@product.ProductId" class="btn btn-primary">Details</a>
                    <a href="/Product/GetById/@product.ProductId" class="btn btn-primary">Cart <i class="fa-solid fa-plus"></i></a>
                </div>
            </div>

        }
    </div>
}
else
{
    <div style=" border-radius:2mm; background-color:#eee;" class="container pe-5 ps-6  mt-3  d-flex  justify-content-between  align-items-center">
        <a href="/home" style="border:none;" class="btn btn-outline-secondary  ps-4 pe-4"> <i style="font-size:30px;" class="fa-solid fa-arrow-left"></i> </a>
        <h2>NO Products...!</h2>
        <span> Contains : 0</span>
    </div>
}



