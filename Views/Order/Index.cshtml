@model IEnumerable<Demo.ViewModels.CartViewModel>

<div class="container">
    <h2>Your Cart</h2>

   
        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.Quantity</td>
                        <td>@item.ListPrice</td>
                        <td>@item.TotalPrice</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-end">
            <a href="/Order/Checkout" class="btn btn-primary">Proceed to Checkout</a>
        </div>
    
</div>
