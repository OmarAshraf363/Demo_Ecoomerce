
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Demo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Demo.styles.css" asp-append-version="true" />
    <link href="~/css/all.min.css" rel="stylesheet" />
</head>

<body>
    <div style="background-color:black;" class="container-fluid  d-flex justify-content-center align-items-center">
        <p style="color:#eee;" class="m-2">Be Carfull , All Designed To Be Comfort To You !! </p>
    </div>
    <header class="container-fluid d-flex justify-content-between align-items-center text-center bg-white border-bottom box-shadow">
        <nav class="navbar d-flex justify-content-between align-items-center navbar-expand-sm navbar-toggleable-sm navbar-light  ">
            <div class="container-fluid">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated &&User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Home" asp-action="Index">Shop</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Category" asp-action="Index">Category</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Product" asp-action="Index">Products</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="admin" asp-controller="Brand" asp-action="Index">Brands</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Customer" asp-controller="Home" asp-action="Index">Shop</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Customer" asp-controller="Gift" asp-action="Index">Gifts</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Customer" asp-controller="Contact" asp-action="Index">Contact Us</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Customer" asp-controller="Contact" asp-action="About">About</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>

        </nav>
        <div>
            <h2>Easly</h2>
        </div>
        <nav class="navbar d-flex justify-content-between align-items-center navbar-expand-sm navbar-toggleable-sm navbar-light  ">
            <div class="container-fluid">

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1 align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <partial class="text-black" name="_LoginPartial"></partial>
                            <li class="nav-item">
                                <a style="font-size:20px;" class="m-2 " asp-area="Customer" asp-controller="Cart" asp-action="Index"><i style="color:black" class="fa-solid fa-cart-shopping"></i> </a>
                            </li>
                            <li class="nav-item">
                                <a style="font-size:20px;" class="  " asp-area="Customer" asp-controller="WishList" asp-action="Index"> <i style="color:black;" class="fa-solid fa-hand-holding-heart"></i> </a>
                            </li>
                        }
                        else
                        {
                            <partial class="text-black" name="_LoginPartial"></partial>
                        }

                    </ul>
                </div>
            </div>

        </nav>



    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
  <footer class="bg-dark text-white py-4">
    <div class="container">
        <div class="row">
            <!-- Logo and Introduction -->
            <div class="col-md-4 mb-3">
                <h5 class="text-uppercase">Omar Ashraf</h5>
                <p>Dedicated to building robust and scalable web applications.</p>
                <a href="#" class="text-light me-2"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="text-light me-2"><i class="fab fa-twitter"></i></a>
                <a href="#" class="text-light me-2"><i class="fab fa-linkedin-in"></i></a>
                <a href="#" class="text-light"><i class="fab fa-github"></i></a>
            </div>

            <!-- Quick Links -->
            <div class="col-md-2 mb-3">
                <h5 class="text-uppercase">Quick Links</h5>
                <ul class="list-unstyled">
                    <li><a href="#" class="text-light text-decoration-none">Home</a></li>
                    <li><a href="#" class="text-light text-decoration-none">About</a></li>
                    <li><a href="#" class="text-light text-decoration-none">Projects</a></li>
                    <li><a href="#" class="text-light text-decoration-none">Contact</a></li>
                </ul>
            </div>

            <!-- Services -->
            <div class="col-md-3 mb-3">
                <h5 class="text-uppercase">Services</h5>
                <ul class="list-unstyled">
                    <li><a href="#" class="text-light text-decoration-none">Web Development</a></li>
                    <li><a href="#" class="text-light text-decoration-none">Backend Development</a></li>
                    <li><a href="#" class="text-light text-decoration-none">API Integration</a></li>
                    <li><a href="#" class="text-light text-decoration-none">Database Management</a></li>
                </ul>
            </div>

            <!-- Contact Information -->
            <div class="col-md-3 mb-3">
                <h5 class="text-uppercase">Contact</h5>
                <ul class="list-unstyled">
                    <li><i class="fas fa-envelope"></i> <a href="mailto:omar.ashraf@example.com" class="text-light text-decoration-none">omar.ashraf@example.com</a></li>
                    <li><i class="fas fa-phone"></i> <a href="tel:+123456789" class="text-light text-decoration-none">+123 456 789</a></li>
                    <li><i class="fas fa-map-marker-alt"></i> <span>123 Developer St, Tech City</span></li>
                </ul>
            </div>
        </div>

        <hr class="bg-light">

        <div class="row">
            <div class="col text-center">
                <p class="mb-0">© 2024 Omar Ashraf. All Rights Reserved.</p>
            </div>
        </div>
    </div>
</footer>











    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
